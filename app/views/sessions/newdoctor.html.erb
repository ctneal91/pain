<%= render 'layouts/header' %>
<%= render 'layouts/titlebarstart' %>Doctor Sign In<%= render 'layouts/titlebarend' %>
<div class="page_content">
  <div class="sign_in_greeting">
    <h4>We are dedicated we are dedicated to helping your patients regulate their short-term and chronic pain needs.</h4>
  </div>
  <h5>If you don't have an account, you can <%= link_to 'create an account', doctor_sign_up_path %>.</h5>
  <%= form_tag do %>

    <div class="sign_in_form">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>

    <div class="sign_in_form">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class="sign_in_form">
      <%= submit_tag "Sign In" %>
    </div>

  <% end %>
</div>
