<div class="page_content">
  <div class="sign_in_box">
    <div class="sign_in_inner_box">
      <%= form_tag do %>

        <div class="sign_in_form">
          <%= label_tag :email %>
          <p></p>
          <%= text_field_tag :email %>
        </div>

        <div class="sign_in_form">
          <%= label_tag :password %>
          <p></p>
          <%= password_field_tag :password %>
        </div>

        <div class="sign_in_form">
          <%= submit_tag "Sign In" %>
        </div>

      <% end %>
