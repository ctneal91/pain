<div class="nav_bar">
  <div class="my">
    <h3>my</h3>
  </div>
  <div class="prescription">
    <h3>prescription</h3>
  </div>
  <div class="pal">
    <h3>pal</h3>
  </div>
  <div class="user_nav_bar">
    <% if @current_doctor %>
      <div class="greeting">
        Hello, Dr. <%= @current_doctor.last_name %>
      </div>
      <div class="messages">
        Messages
      </div>
      <div class="sign_out">
        <%= link_to "Sign Out", doctor_sign_out_path, method: :delete %>
      </div>
    <% elsif @current_patient %>
      <div class="greeting">
        Hello, <%= @current_patient.full_name %>
      </div>
      <div class="messages">
        Messages
      </div>
      <div class="sign_out">
      <%= link_to "Sign Out", patient_sign_out_path, method: :delete %>
      </div>
    <% end %>
  </div>
</div>
<div class="title_bar">
  <div class="title_name">
    <h4>Your <%= @prescription.drug.brand_name %> Prescription for <%= @patient.full_name %></h4>
  </div>
</div>
<div class="page_content">
  <div class="drug_info">
    <h4>Nonproprietary Name: <i><%= @prescription.drug.nonpropietary_name %></i></h4>
    <h4>IUPAC Name: <%= @prescription.drug.chemical_name %></h4>
    <h5>Purpose: <%= @prescription.drug.purpose %></h5>
  </div>
  <div class= "drug_amounts">
    <p>Initial Amount: <%= @prescription.initial_amount_of_pills %></p>
    <p>Remaining Amount: <%= @prescription.remaining_amount_of_pills %></p>
  </div>
</div>
