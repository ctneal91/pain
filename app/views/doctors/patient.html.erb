<div class="nav_bar">
  <div class="my">
    <h3>my</h3>
  </div>
  <div class="prescription">
    <h3>prescription</h3>
  </div>
  <div class="pal">
    <h3>pal</h3>
  </div>
  <div class="user_nav_bar">
    <% if @current_doctor %>
      <div class="greeting">
        Hello, Dr. <%= @current_doctor.last_name %>
      </div>
      <div class="messages">
        Messages
      </div>
      <div class="sign_out">
        <%= link_to "Sign Out", doctor_sign_out_path, method: :delete %>
      </div>
    <% elsif @current_patient %>
      <div class="greeting">
        Hello, <%= @current_patient.full_name %>
      </div>
      <div class="messages">
        Messages
      </div>
      <div class="sign_out">
      <%= link_to "Sign Out", patient_sign_out_path, method: :delete %>
      </div>
    <% end %>
  </div>
</div>
<div class="title_bar">
  <div class="title_name">
    <h4>Your Prescriptions for <%= @patient.full_name %></h4>
  </div>
</div>
<div class="page_content">
  <table class="table table-striped">
    <tr>
      <th>Drug Name</th>
      <th>Doctor</th>
      <th>Initial Amount</th>
      <th>Pills Remaining</th>
      <th>Prescription Length (Days)</th>
    </tr>
    <tr>
      <% @prescriptions.each do |prescription| %>
          <td><%= prescription.drug.brand_name %></td>
          <td><%= prescription.doctor.full_name %></td>
          <td><%= prescription.initial_amount_of_pills %></td>
          <td>#?</td>
          <td><%= prescription.length_of_prescription %></td>
      <% end %>
    </tr>
  </table>
</div>
